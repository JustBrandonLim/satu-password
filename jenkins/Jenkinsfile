pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                dir("webapp") {
                    sh 'docker image build -t satu-password:latest'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'docker run -d --rm --name satu-password -p 3000:3000 satu-password:latest'
            }
        }
    }
}
