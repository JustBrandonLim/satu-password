pipeline {
    agent any

    stages {
        stage('Clean Up') {
            steps {
                echo "Cleaning up..."
                sh 'docker stop webapp'
                sh 'docker rm webapp'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'docker build -t webapp:latest ./webapp/'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'docker run -d --name webapp --network satu-password-network -p 3000:3000 webapp:latest'
            }
        }
    }
}
