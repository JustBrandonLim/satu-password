pipeline {
    agent any

    stages {
        stage('Clean Up') {
            steps {
                echo "Cleaning up..."
                dir("/var/jenkins_home/workspace/satu-password") {
                    sh 'cp -r /tmp/postgresdb .'
                    sh 'cp -r /tmp/.env .'
                    sh 'docker compose down webapp'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                dir("/var/jenkins_home/workspace/satu-password") {
                    sh 'docker compose build webapp'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'docker compose up webapp -d'
                sh 'docker exec webapp yarn prisma db push'
            }
        }
    }
}
